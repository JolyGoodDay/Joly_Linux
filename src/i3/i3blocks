# i3blocks config file
# see "man i3blocks" for documentation.

# Global properties
[global]
interval=5
markup=pango

[scarlett]
command=~/.config/i3/scarlett.sh
interval=1
color=#FF1493

#weather
[weather]
command=bash ~/.config/i3/weather.sh
interval=600
color=#17CEFA
[load]
command=bash ~/.config/i3/load.sh
interval=10
color=#FF4500

# Memory
[memory]
command=free -h | awk '/^Mem:/ {print $3 "/" $2}'
label=ð“ƒµ
interval=10
color=#32CD32

[disk]
command=bash ~/.config/i3/disk_status.sh
interval=10
color=#C9E3DB


# Volume Control
[volume]
command=i3blocks-volume
label=â™ª:
instance=Master
signal=10
color=#FFD700

[ethernet]
command=ifconfig eth0 | grep 'inet ' | awk '{print "E: "$2}'
label=Eth:
interval=10
color=#00CED1

[wireless]
command=ifconfig wlan0 | grep 'inet ' | awk '{print "W: "$2}'
label=Wlan:
interval=10
color=#42EEEE

# Time Zone: Los Angeles
[tztime]
command=bash ~/.config/i3/time_all
interval=1
color=#42EEEE

